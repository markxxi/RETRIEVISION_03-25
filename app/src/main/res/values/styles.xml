<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--This is to hide the circle indicator in menu-->
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@null</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Input">

        <item name="chipBackgroundColor">@color/darkgray</item>
        <item name="chipCornerRadius">30dp</item>
        <item name="android:textColor">@color/fadedblue</item>
        <item name="chipStrokeColor">@android:color/transparent</item>

    </style>
    <style name="customdd" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:strokeColor">@color/blue</item> <!-- Color of the box stroke -->
        <item name="boxStrokeColor">@color/blue</item>
    </style>
    <style name="CustomInputText" parent="Widget.Material3.TextInputLayout.OutlinedBox">

        <item name="boxCornerRadiusBottomStart">15sp</item>
        <item name="boxCornerRadiusBottomEnd">15sp</item>
        <item name="boxCornerRadiusTopStart">15sp</item>
        <item name="boxCornerRadiusTopEnd">15sp</item>
        <item name="boxStrokeColor">@color/blue</item>

    </style>
    <style name="customDropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <item name="boxCornerRadiusBottomStart">15sp</item>
        <item name="boxCornerRadiusBottomEnd">15sp</item>
        <item name="boxCornerRadiusTopStart">15sp</item>
        <item name="boxCornerRadiusTopEnd">15sp</item>
        <item name="boxStrokeColor">@color/blue</item>


    </style>
</resources>