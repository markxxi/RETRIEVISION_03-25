<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragment">

    <TextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Home"
        android:textColor="@android:color/transparent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reportFoundObjectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_home"
        android:layout_marginTop="100dp"
        android:text="@string/lost_text"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:textColor="@color/yellow" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reportLostObjectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reportFoundObjectButton"
        android:layout_marginTop="10dp"
        android:text="@string/found_text"
        android:textStyle="bold"
        android:background="@drawable/button_bg2"
        android:textColor="@color/blue" />
</RelativeLayout>
